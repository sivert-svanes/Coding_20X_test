@model List<Prototype_test.Models.ObstacleData>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div>
    <h1>Overview</h1>
    <p>All registered obstacles:</p>

    @if (Model != null && Model.Count > 0)
    {
        <ul>
        @foreach (var obstacle in Model)
        {
            <li style="margin-bottom: 1em;">
                <strong>Name:</strong> @obstacle.ObstacleName <br />
                <strong>Height:</strong> @obstacle.ObstacleHeight <br />
                <strong>Description:</strong> @obstacle.ObstacleDescription
            </li>
        }
        </ul>
    }
    else
    {
        <p>No obstacles registered.</p>
    }
</div>